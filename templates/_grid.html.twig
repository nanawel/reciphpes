<div class="table-responsive">
    <table class="table table-hover">
        <thead class="thead-light">
        <tr>
            {% for headerLabel in gridConfig.headers %}
                <th scope="col">{{ headerLabel }}</th>
            {% endfor %}
            {% if gridConfig.shouldShowActions() %}
                <th scope="col" style="width:10%">Actions</th>
            {%  endif %}
        </tr>
        </thead>
        <tbody>
            {% for row in gridConfig.items %}
                <tr>
                    {% for header, headerLabel in gridConfig.headers %}
                        <td>{{ gridConfig.getColumn(header).render(row, header) }}</td>
                    {% endfor %}

                    {% if gridConfig.shouldShowActions() %}
                        <td>
                            {% include '_grid/actions.html.twig' %}
                        </td>
                    {%  endif %}
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
