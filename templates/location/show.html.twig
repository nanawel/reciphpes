{% extends 'content.html.twig' %}


{% block content %}
    <div class="jumbotron">
        <div class="btn-toolbar float-right" role="toolbar" aria-label="Toolbar">
            <div class="btn-group mr-2" role="group" aria-label="Actions">
                <a href="{{ path('app_location_edit', {id: location.id}) }}" class="btn action btn-secondary"><span>Modifier</span></a>
                <a href="{{ path('app_location_delete', {id: location.id}) }}" class="btn action btn-danger"><span>Supprimer</span></a>
            </div>
        </div>
        <h1 class="display-4"><i class="fas fa-book"></i> {{ location.name }}</h1>
        {% if location.createdAt %}
            <p><span class="badge badge-secondary">Créée le {{ location.createdAt | localizeddate() }}</span></p>
        {% endif %}
    </div>
{% endblock %}
